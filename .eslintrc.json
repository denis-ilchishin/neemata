{
  "env": {
    "browser": true,
    "node": true,
    "es": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "no-extra-semi": "off",
    "no-unused-vars": "warn",
    "max-len": [
      "warn",
      {
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreUrls": true
      }
    ],
    "no-empty": "warn",
    "operator-linebreak": "off"
  }
}
