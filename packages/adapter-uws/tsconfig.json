{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./index.ts",
    "./lib/**/*.ts"
  ]
}