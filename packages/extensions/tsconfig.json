{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ESNext",
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist"
  },
  "include": ["./index.ts", "./lib/**/*.ts"]
}
